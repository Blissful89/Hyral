{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ESNext"],
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "composite": false,
    "strict": true
  }
}
